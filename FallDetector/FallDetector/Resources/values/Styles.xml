<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="styleButton">
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>
    <item name="android:shadowColor">#000000</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">0.6</item>
    <item name="android:padding">10dip</item>
  </style>

  <style name="styleButtonRight">
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">left</item>
    <item name="android:shadowColor">#000000</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">0.6</item>
    <item name="android:padding">10dip</item>
  </style>

  <style name="styleButtonLeft">
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">right</item>
    <item name="android:shadowColor">#000000</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">0.6</item>
    <item name="android:padding">10dip</item>
  </style>

  <style name="styleText">
    <item name="android:textSize">60sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">#2B2B2B</item>
  </style>

  <style name="styleTitle">
    <item name="android:textSize">60sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">#FFFFFF</item>
  </style>

  <style name="styleCheckBox">
    <item name="android:textSize">30sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">left</item>
    <item name="android:textColor">#2B2B2B</item>
  </style>
  
  <style name="styleEditText">
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">italic</item>
    <item name="android:gravity">left</item>
    <item name="android:textColor">#2B2B2B</item>
  </style>

</resources>
