<?xml version="1.0" encoding="utf-8" ?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

  <item>
    <shape android:shape="rectangle">
      <size
          android:width="100dp"
          android:height="40dp" />
      <solid android:color="#FF1300" />
      <corners android:radius="0dp"/>
    </shape>
  </item>

  <item
    android:top="35dp"
    android:bottom="-40dp"
    android:left="-80dp">
    <rotate
        android:fromDegrees="45">
      <shape android:shape="rectangle">
        <solid android:color="#BDBEC2" />
      </shape>
    </rotate>
  </item>

</layer-list>
